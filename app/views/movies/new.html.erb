<h1>Agregar Nueva Película</h1>

<%= form_with model: @movie, local: true do |form| %>
  <div>
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :synopsis, "Sinopsis" %>
    <%= form.text_area :synopsis %>
  </div>

  <div>
    <%= form.label :director, "Director" %>
    <%= form.text_field :director %>
  </div>

  <div>
    <%= form.submit "Guardar Película" %>
  </div>
<% end %>

<%= link_to 'Volver a la lista', movies_path %>
